<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:fillViewport="true"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:context=".CadastroMedico">

        <EditText
          android:id="@+id/editTextUsuarioEspecialidade"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="32dp"
          android:background="@drawable/edittext_background"
          android:drawableStart="@drawable/especialidade"
          android:drawablePadding="20dp"
          android:ems="10"
          android:hint="Especialidade"
          android:inputType="number"
          android:paddingStart="10dp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/editTextUsuarioCRM" />

        <EditText
          android:id="@+id/editTextUsuarioCRM"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="32dp"
          android:background="@drawable/edittext_background"
          android:drawableStart="@drawable/carteira_cpf"
          android:drawablePadding="20dp"
          android:ems="10"
          android:hint="CRM"
          android:inputType="number"
          android:paddingStart="10dp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/editTextUsuarioCNPJ" />

        <EditText
          android:id="@+id/editTextUsuarioCNPJ"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="32dp"
          android:background="@drawable/edittext_background"
          android:drawableStart="@drawable/carteira_cpf"
          android:drawablePadding="20dp"
          android:ems="10"
          android:hint="CNPJ"
          android:inputType="number"
          android:paddingStart="10dp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/editTextUsuarioCPF" />

        <EditText
          android:id="@+id/editTextUsuarioSenha"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="32dp"
          android:background="@drawable/edittext_background"
          android:drawableStart="@drawable/cadeado_senha"
          android:drawablePadding="20dp"
          android:ems="10"
          android:hint="Senha"
          android:inputType="textPassword"
          android:paddingStart="10dp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/editTextUsuarioEmail" />

        <EditText
          android:id="@+id/editTextUsuarioEmail"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="32dp"
          android:background="@drawable/edittext_background"
          android:drawableStart="@drawable/email"
          android:drawablePadding="20dp"
          android:ems="10"
          android:hint="E-mail"
          android:inputType="textEmailAddress"
          android:paddingStart="10dp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/editTextUsuarioNumeroContato" />

        <EditText
          android:id="@+id/editTextUsuarioNumeroContato"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="32dp"
          android:background="@drawable/edittext_background"
          android:drawableStart="@drawable/telefone"
          android:drawablePadding="20dp"
          android:ems="10"
          android:hint="NÃºmero de contato"
          android:inputType="phone"
          android:paddingStart="10dp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/editTextUsuarioEspecialidade" />

        <EditText
          android:id="@+id/editTextUsuarioCPF"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="32dp"
          android:background="@drawable/edittext_background"
          android:drawableStart="@drawable/carteira_cpf"
          android:drawablePadding="20dp"
          android:ems="10"
          android:hint="CPF"
          android:inputType="number"
          android:paddingStart="10dp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/editTextUsuarioDataNascimento" />

        <EditText
          android:id="@+id/editTextUsuarioDataNascimento"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="32dp"
          android:background="@drawable/edittext_background"
          android:drawableStart="@drawable/calendario_vector_asset"
          android:drawablePadding="20dp"
          android:ems="10"
          android:hint="Data de nascimento"
          android:inputType="date"
          android:paddingStart="10dp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/editTextUsuarioNomeCompleto" />

        <EditText
          android:id="@+id/editTextUsuarioNomeCompleto"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_marginStart="32dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="32dp"
          android:background="@drawable/edittext_background"
          android:drawableStart="@drawable/pessoa_usuario"
          android:drawablePadding="20dp"
          android:ems="10"
          android:hint="Nome completo"
          android:inputType="textPersonName"
          android:paddingStart="10dp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/imageViewLogoCadastroPaciente" />

        <ImageView
          android:id="@+id/imageViewLogoCadastroPaciente"
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_marginTop="8dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/logo_2" />

        <Button
          android:id="@+id/botaoFinalizarCadastro"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="32dp"
          android:layout_marginBottom="32dp"
          android:backgroundTint="@color/vermelho"
          android:text="Finalizar Cadastro"
          android:textStyle="bold"
          app:cornerRadius="50dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/editTextUsuarioSenha"
          app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>