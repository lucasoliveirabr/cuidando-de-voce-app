<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Familia">

  <View
    android:id="@+id/viewTopo3"
    android:layout_width="0dp"
    android:layout_height="140dp"
    android:background="@color/vermelho"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/textViewTopoFamilia"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Família"
    android:textColor="#FFFFFF"
    android:textSize="34sp"
    app:layout_constraintBottom_toBottomOf="@+id/viewTopo3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/textViewTextoFamilia"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Disponível apenas no\n plano Família"
    android:textAlignment="center"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/viewTopo3" />
</androidx.constraintlayout.widget.ConstraintLayout>